@model TwitterMvc.Dtos.PostDto

<form asp-action="EditPost" asp-controller="Profile" method="post" asp-route-postId="@ViewBag.PostId">
    <div class="form-group">
        <input asp-for="@Model.Title" type="text" class="form-control" />
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <textarea asp-for="@Model.Content" class="form-control" rows="3"></textarea>
        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-success">Edit</button>
</form>